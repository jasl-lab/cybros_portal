<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" style="flex: 1"><%= @year -%></h5>
      <div style="flex: 1" class="text-center"><%= @series_name %></div>
      <a style="flex: 1" class="close text-right" data-dismiss="modal" aria-label="Close">
        <i class="fas fa-window-close"></i>
      </a>
    </div>
    <div class="modal-body">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= t(".table.rank") %></th>
              <th><%= t(".table.customer_code") %></th>
              <th><%= t(".table.customer_name") %></th>
            </tr>
          </thead>
          <tbody>
            <% crm_tops.each do |c| %>
              <tr>
                <td><%= c.排名 -%></td>
                <td><%= c.客户编码 -%></td>
                <td><%= c.客户集团名称 -%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-primary" data-dismiss="modal"><%= t('.close') -%></button>
    </div>
  </div>
</div
