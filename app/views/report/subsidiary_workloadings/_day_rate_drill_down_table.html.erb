<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th width="34%"><%= t("report.subsidiary_workloadings.show.table.user_name") -%></th>
      <th width="30%"><%= t("report.subsidiary_workloadings.show.table.date") -%></th>
      <th width="12%"><%= t("report.subsidiary_workloadings.show.table.date_need") -%></th>
      <th width="12%"><%= t("report.subsidiary_workloadings.show.table.date_real") -%></th>
      <th width="12%"><%= t("report.subsidiary_workloadings.show.table.fill_rate") -%></th>
    </tr>
  </thead>
  <tbody>
    <% @data.each do |d| %>
      <tr class=<%= ((d&.fill_rate&.to_f * 100) < @day_rate_ref) ? 'table-danger' : '' -%>>
        <td><%= d.user_name -%></td>
        <td><%= d.date.to_s(:short_month) -%></td>
        <td><%= d.date_need -%></td>
        <td><%= d.date_real -%></td>
        <td><%= (d&.fill_rate&.to_f * 100).round(1) -%>%</td>
      </tr>
    <% end %>
  </tbody>
</table>
