<div class="row">
  <div class="col-lg-12"
    data-controller="design-cash-flows"
    data-action="resize@window->design-cash-flows#layout"
    data-design-cash-flows-org_names="<%= @org_names.to_json -%>"
    data-design-cash-flows-org_rate="<%= @org_rate.to_json -%>">
    <h3 class="page-title">
      <%= t(".title") %>
    </h3>
    <%= form_tag report_design_cash_flow_path, method: :get, class: 'form-inline' do -%>
      <div class="form-group">
        <label class="mr-1"><%= t(".month_name") -%>：</label>
        <%= select_tag 'month_name', options_for_select(@all_month_names, @month_name), class: 'form-control' %>
      </div>
      <div class="form-group mr-3">
        <label class="mr-1"><%= t(".org_names") -%>：</label>
          <%= select_tag 'orgs', options_for_select(@organization_options, @orgs_options), {include_blank: true, multiple: true, class: 'form-control' } %>
      </div>
      <div><%= submit_tag t(".confirm"), class: 'btn btn-thape-color' %></div>
    <% end -%>
    <div class="row mt-3">
      <div class="col-sm-12">
        <h4 class="text-center">2020年 <%= @end_of_month.month -%>月创意板块设计现金流情况</h4>
      </div>
      <div class="col-sm-12">
        <div id="org-design-cash-flow-chart" style="width: 100%;height: 500px;">
        </div>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-lg-12">
        <table class="table table-striped table-responsive table-dark">
          <thead>
            <tr class="d-flex">
              <th scope="col" class="col-1"></th>
              <% @org_names.each do |company_name| %>
                <th scope="col" class="col-1"><%= company_name -%></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <tr class="d-flex">
              <th scope="row" class="col-1">现金流（万元）</th>
              <% @org_endmoney.each_with_index do |end_money, index| %>
                <td class="col-1"><%= end_money -%></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
