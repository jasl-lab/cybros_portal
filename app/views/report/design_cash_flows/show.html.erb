<%- content_for :action_bar do %>
  <ol>
    <li class="action_bar-item">
      <%= link_to t('.actions.view_orgcode_sum'),
          report_design_cash_flow_path(month_name: @month_name, view_orgcode_sum: true), class: 'btn text-primary' %>
    </li>
    <li class="action_bar-item">
      <%= link_to t('.actions.view_orgcode'),
          report_design_cash_flow_path(month_name: @month_name), class: 'btn text-primary' %>
    </li>
  </ol>
<% end %>

<div class="row">
  <div class="col-lg-12"
    data-controller="design-cash-flows"
    data-action="resize@window->design-cash-flows#layout"
    data-design-cash-flows-sum_org_names="<%= @sum_org_names.to_json -%>">
    <h3 class="page-title">
      <%= t(".title") %>
    </h3>
    <%= form_tag report_design_cash_flow_path, method: :get, class: 'form-inline' do -%>
      <%= hidden_field_tag :view_orgcode_sum, @view_orgcode_sum %>
      <div class="form-group">
        <label class="mr-1"><%= t(".month_name") -%>：</label>
        <%= select_tag 'month_name', options_for_select(@all_month_names, @month_name), class: 'form-control' %>
      </div>
      <div class="form-group mr-3">
        <label class="mr-1"><%= t(".org_names") -%>：</label>
          <%= select_tag 'orgs', options_for_select(@organization_options, @orgs_options), {include_blank: true, multiple: true, class: 'form-control' } %>
      </div>
      <div><%= submit_tag t(".confirm"), class: 'btn btn-primary' %></div>
    <% end -%>
  </div>
</div>
