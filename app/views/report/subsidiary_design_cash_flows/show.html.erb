<%- content_for :action_bar do %>
  <ol>
    <li class="action_bar-item">
      <%= link_to t('.actions.view_deptcode_sum'),
          report_subsidiary_design_cash_flow_path(company_name: @selected_short_name, month_name: @month_name, view_deptcode_sum: true, in_iframe: params[:in_iframe]), class: 'btn text-primary' %>
    </li>
    <li class="action_bar-item">
      <%= link_to t('.actions.view_deptcode'),
          report_subsidiary_design_cash_flow_path(company_name: @selected_short_name, month_name: @month_name), class: 'btn text-primary' %>
    </li>
  </ol>
<% end %>

<div class="row">
  <div class="col-lg-12"
    data-controller="subsidiary-design-cash-flow"
    data-action="resize@window-subsidiary-design-cash-flow#layout"
    data-subsidiary-design-cash-flow-sum_dept_names="<%= @sum_dept_names.to_json -%>"
    data-subsidiary-design-cash-flow-view_deptcode_sum="<%= @view_deptcode_sum -%>">
    <h4 class="page-title">
      <%= select_tag 'company_name', options_for_select(@available_short_company_names, @selected_short_name), class: 'form-control2 form-control', onchange: "Turbolinks.visit('#{url_for(action: 'show', controller: 'subsidiary_design_cash_flows', view_deptcode_sum: true)}&company_name='+ this.value);", style: "display: inline;" -%>
      <%= t(".title") %>
    </h4>
  </div>
</div>
