<div class="row">
  <div class="col-lg-12">
    <h3 class="page-title">
      <%= t(".title") %>
    </h3>

    <div class="row">
      <div class="col-lg-12">
<% @departments.in_groups_of(7) do |group| %>
  <table class="table table-striped">
    <% max_people_in_group = group.collect { |dep_id| @person_count_by_department[dep_id].to_i }.max %>
    <thead>
      <tr>
      <% group.each do |dep| %>
        <th><%= dep || '00000000' %></th>
      <% end %>
      </tr>
    </thead>
    <tbody>
      <% (0...max_people_in_group).each do |i| %>
        <tr>
          <% group.each do |dep| %>
            <% if dep.present? && @person_by_department[dep][i].present? %>
              <% person = @person_by_department[dep][i] %>
              <td><%= person.work_name -%>（<%= person.refresh_count.to_i -%> / <%= person.total_count.to_i -%>）</td>
            <% else %>
              <td></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
      </div>
    </div>
  </div>
</div>
