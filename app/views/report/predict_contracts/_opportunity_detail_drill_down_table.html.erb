<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th width="30%"><%= t("report.predict_contracts.show.table.opportunitycode") -%></th>
      <th width="30%"><%= t("report.predict_contracts.show.table.opportunityname") -%></th>
      <th width="10%"><%= t("report.predict_contracts.show.table.contractconvert") -%></th>
      <th width="20%"><%= t("report.predict_contracts.show.table.businessdirectorname") -%></th>
    </tr>
  </thead>
  <tbody>
    <% rows.each do |r| %>
      <tr>
        <td><%= r.opportunitycode -%></td>
        <td><%= r.opportunityname -%></td>
        <td><%= r.contractconvert -%></td>
        <td><%= r.businessdirectorname -%></td>
      </tr>
    <% end %>
  </tbody>
</table>
