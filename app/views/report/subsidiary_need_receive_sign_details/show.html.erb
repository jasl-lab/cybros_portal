<div class="row">
  <div class="col-lg-12">
    <h3 class="page-title">
      <%= t(".title") %>
    </h3>
    <div class="row">
      <div class="col-lg-12" data-controller="subsidiary-need-receive-sign-details"
        data-subsidiary-need-receive-sign-details-can_hide_item="<%= @can_hide_item -%>">
          <%= form_tag report_subsidiary_need_receive_sign_detail_path, method: :get, class: 'form-inline' do -%>
            <div class="form-group mr-3">
              <label class="mr-1"><%= t(".month_name") -%>：</label>
              <%= select_tag 'month_name', options_for_select(@all_month_names, @month_name), class: 'form-control' %>
            </div>
            <div class="form-group">
              <label class="mr-1"><%= t(".sign_receive_great_than") -%>：</label>
              <%= text_field_tag 'sign_receive_great_than', @sign_receive_great_than, class: 'form-control form-control2' %>
            </div>
            <% if @can_hide_item -%>
              <div class="form-group mx-2">
                <%= check_box_tag 'show_hide_item', true, @show_hide_item, class: 'form-control' %>
                <label class="mr-1"> <%= t(".show_hide_item") -%></label>
              </div>
            <% end %>
            <div>
              <%= submit_tag t(".confirm"), class: 'btn btn-primary' %>
            </div>
          <% end -%>
        <table id="subsidiary-need-receive-sign-details-datatable"
          class="table table-hover table-bordered table-responsive"
          data-source="<%= report_subsidiary_need_receive_sign_detail_path(format: :json, sign_receive_great_than: @sign_receive_great_than, month_name: params[:month_name], show_hide_item: @show_hide_item) %>">
          <thead>
            <tr>
              <th><%= t(".table.org_name") -%></th>
              <th><%= t(".table.dept_name") -%></th>
              <th><%= t(".table.business_director_name") -%></th>
              <th><%= t(".table.sales_contract_code") -%></th>
              <th><%= t(".table.sales_contract_name") -%></th>
              <th><%= t(".table.amount_total") -%></th>
              <th><%= t(".table.contract_property_name") -%></th>
              <th><%= t(".table.contract_time") -%></th>
              <th><%= t(".table.sign_receive") -%></th>
              <th><%= t(".table.over_amount") -%></th>
              <% if @can_hide_item -%>
                <th><%= t(".table.admin_action") -%></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
