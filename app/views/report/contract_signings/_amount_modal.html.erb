<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title"><%= @company_name -%> <%= @department_name -%> 本年业绩合同额明细</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th width="10%"><%= t(".table.salescontractcode") -%></th>
      <th width="30%"><%= t(".table.salescontractname") -%></th>
      <th width="15%"><%= t(".table.moneytax") -%></th>
      <th width="25%"><%= t(".table.clientsname") -%></th>
      <th width="20%"><%= t(".table.businessdirectorname") -%></th>
    </tr>
  </thead>
  <tbody>
    <% @data.each do |d| %>
      <tr>
        <td><%= d.salescontractcode -%></td>
        <td><%= d.salescontractname -%></td>
        <td><%= d.moneytax.round(0) -%></td>
        <td><%= d.clientsname -%></td>
        <td><%= Bi::ContractSignDetailDate.find_by(salescontractcode: d.salescontractcode)&.businessdirectorname -%></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-primary" data-dismiss="modal"><%= t('.close') -%></button>
    </div>
  </div>
</div
