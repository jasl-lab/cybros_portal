<div class="row justify-content-center">
  <div class="col-lg-12">
    <h3 class="page-title">
      <%= t(".title") %>
    </h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col"><%= t(".table.time") %></th>
          <th scope="col">8:00</th>
          <th scope="col">10:00</th>
          <th scope="col">12:00</th>
          <th scope="col">14:00</th>
          <th scope="col">17:00</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row"><%= t(".table.over_6") %></th>
          <td><%= @user_num[0] == nil ? "/" : @user_num[0][0] %></td>
          <td><%= @user_num[1] == nil ? "/" : @user_num[1][0] %></td>
          <td><%= @user_num[2] == nil ? "/" : @user_num[2][0] %></td>
          <td><%= @user_num[3] == nil ? "/" : @user_num[3][0] %></td>
          <td><%= @user_num[4] == nil ? "/" : @user_num[4][0] %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(".table.over_12") %></th>
          <td><%= @user_num[0] == nil ? "/" : @user_num[0][1] %></td>
          <td><%= @user_num[1] == nil ? "/" : @user_num[1][1] %></td>
          <td><%= @user_num[2] == nil ? "/" : @user_num[2][1] %></td>
          <td><%= @user_num[3] == nil ? "/" : @user_num[3][1] %></td>
          <td><%= @user_num[4] == nil ? "/" : @user_num[4][1] %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(".table.over_18") %></th>
          <td><%= @user_num[0] == nil ? "/" : @user_num[0][2] %></td>
          <td><%= @user_num[1] == nil ? "/" : @user_num[1][2] %></td>
          <td><%= @user_num[2] == nil ? "/" : @user_num[2][2] %></td>
          <td><%= @user_num[3] == nil ? "/" : @user_num[3][2] %></td>
          <td><%= @user_num[4] == nil ? "/" : @user_num[4][2] %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to t('.export'), export_report_yingjianke_logins_path(format: :csv), class: 'btn text-primary' %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th><%= t(".table.index") %></th>
          <th><%= t(".table.user_info") %></th>
          <th><%= t(".table.login_time") %></th>
          <th><%= t(".table.last_access_time") %></th>
          <th><%= t(".table.stay_time") %></th>
          <th><%= t(".table.device") %></th>
          <th><%= t(".table.ip") %></th>
        </tr>
        </thead>
        <tbody>
        <% @rows.each_with_index do |r, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= r[0] %></td>
            <td><%= r[1].to_s(:db) %></td>
            <td><%= r[2].to_s(:db) %></td>
            <td><%= r[3] %></td>
            <td><%= r[4] %></td>
            <td><%= r[5] %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
