<div class="row">
  <div class="col-lg-12">
    <div class="container">
      <h3 class="page-title">
        <%= t(".title", company: @selected_company_name) %>
      </h3>
      <%= form_tag report_yearly_subsidiary_workloading_path, method: :get, class: 'form-inline' do -%>
        <div class="form-group">
          <label class="mr-1"><%= t(".day_rate_ref") -%>：</label>
          <%= text_field_tag 'day_rate_ref', @day_rate_ref, class: 'form-control form-control2' %>
        </div>
        <div class="form-group">
          <label class="mr-1"><%= t(".planning_day_rate_ref") -%>：</label>
          <%= text_field_tag 'planning_day_rate_ref', @planning_day_rate_ref, class: 'form-control form-control2' %>
        </div>
        <div class="form-group">
          <label class="mr-1"><%= t(".building_day_rate_ref") -%>：</label>
          <%= text_field_tag 'building_day_rate_ref', @building_day_rate_ref, class: 'form-control form-control2' %>
        </div>
        <div class="form-group">
          <label class="mr-1"><%= t(".company_name") -%>：</label>
          <%= select_tag 'company_name', options_for_select(@all_company_names, @selected_company_name), class: 'form-control' %>
        </div>
        <div><%= submit_tag t(".confirm"), class: 'btn btn-primary' %></div>
      <% end -%>
      <div id="yearly-subsidiary-workloadings-chart"
        data-controller="yearly-subsidiary-workloadings"
        data-action="resize@window->yearly-subsidiary-workloadings#layout"
        data-yearly-subsidiary-workloadings-x_axis="<%= @dates.to_json -%>"
        data-yearly-subsidiary-workloadings-day_rate="<%= @day_rate.to_json -%>"
        data-yearly-subsidiary-workloadings-day_rate_ref="<%= @day_rate_ref -%>"
        data-yearly-subsidiary-workloadings-planning_day_rate="<%= @planning_day_rate.to_json -%>"
        data-yearly-subsidiary-workloadings-planning_day_rate_ref="<%= @planning_day_rate_ref -%>"
        data-yearly-subsidiary-workloadings-building_day_rate="<%= @building_day_rate.to_json -%>"
        data-yearly-subsidiary-workloadings-building_day_rate_ref="<%= @building_day_rate_ref -%>"
        style="width: 100%;height: 600px;">
      </div>
    </div>
  </div>
</div>
