<div class="row">
  <div class="col-lg-12"
    data-controller="yearly-subsidiary-complete-values"
    data-action="resize@window->yearly-subsidiary-complete-values#layout"
    data-yearly-subsidiary-complete-values-x_axis="<%= @all_months.to_json -%>"
    data-yearly-subsidiary-complete-values-selected_company_name="<%= @selected_company_name -%>"
    data-yearly-subsidiary-complete-values-complete_value_totals="<%= @complete_value_totals.to_json -%>"
    data-yearly-subsidiary-complete-values-complete_value_ref="<%= @complete_value_ref -%>">
    <h3 class="page-title">
      <%= t(".title", company: @selected_company_name) %>
    </h3>
    <%= form_tag report_yearly_subsidiary_complete_value_path, method: :get, class: 'form-inline' do -%>
      <div class="form-group">
        <label class="mr-1"><%= t(".complete_value_ref") -%>：</label>
        <%= text_field_tag 'complete_value_ref', @complete_value_ref, class: 'form-control form-control2' %>
      </div>
      <div class="form-group">
        <label class="mr-1"><%= t(".company_name") -%>：</label>
        <%= select_tag 'org_code', options_for_select(@all_short_companies, @org_code), class: 'form-control' %>
      </div>
      <div><%= submit_tag t(".confirm"), class: 'btn btn-thape-color' %></div>
    <% end -%>
    <div id="yearly-subsidiary-complete-value-chart" style="width: 100%;height: 400px;"></div>
  </div>
</div>
