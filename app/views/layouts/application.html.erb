<%- body_class = "c-app header-fixed" %>
<%- body_class << " c-sidebar-fixed c-sidebar-lg-show" if has_sidebar? %>
<%- body_class << " aside-menu-fixed" if has_aside? %>
<% content_for(:body_class, body_class) %>
<% content_for :content do %>
  <%= render "layouts/application/header" %>
  <div class="c-body">
    <%= render_sidebar %>
    <main class="c-main">
      <div class="main-header-wrapper">
        <%= render_breadcrumbs %>
        <%= render_action_bar %>
        <%= render "layouts/application/notice" %>
      </div>
      <div class="container-fluid" id="main">
        <%= yield %>
      </div>
    </main>
    <%= render_aside %>
  </div>
  <%= render "layouts/application/footer" %>
<% end %>

<%= render template: "layouts/base" %>

