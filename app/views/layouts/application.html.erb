<%- body_class = "c-app" %>
<% content_for(:body_class, body_class) %>
<% content_for :content do %>
  <%= render_sidebar %>
  <div class="c-wrapper">
    <%= render "layouts/application/header" %>
    <%= render_aside %>
    <div class="c-body">
      <main class="c-main">
        <div class="main-header-wrapper">
          <%= render_breadcrumbs %>
          <%= render_action_bar %>
          <%= render "layouts/application/notice" %>
        </div>
        <div class="container-fluid" id="main">
          <%= yield %>
        </div>
      </main>
    </div>
    <%= render "layouts/application/footer" %>
  </div>
<% end %>

<%= render template: "layouts/base" %>

