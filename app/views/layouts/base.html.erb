<!DOCTYPE html>
<html class="<%= html_class %>" lang="<%= I18n.locale %>">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= display_meta_tags separator: "-", reverse: true %>
    <%#= render "layouts/favicon" %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if @using_lbs_qq.present? %>
      <script charset="utf-8" src="https://map.qq.com/api/gljs?v=1.exp&key=EJPBZ-7TEKU-DLQVP-2K6EE-XZ6O6-NWBKM"></script>
    <% end %>
    <%= yield :head %>
  </head>

  <body class="<%= body_class %>">
    <%= content_for?(:content) ? yield(:content) : yield %>
    <%= yield :body %>
  </body>
</html>
