<div class="sidebar">
  <div class="sidebar-header">
    <%= link_to person_root_path, class: "nav-link" do %>
      <i class="fas fa-home"></i>
      <%= t("layouts.sidebar.person.header") %>
    <% end %>
  </div>
  <nav class="sidebar-nav">
    <ul class="nav">
      <%= nav_item controller: 'person/name_cards', html_options: {class: "nav-item"} do %>
        <%= link_to new_person_name_card_path, class: "nav-link" do %>
          <i class="nav-icon fas fa-user-alt"></i>
          <%= t("layouts.sidebar.person.new_name_card") %>
        <% end %>
      <% end %>
      <% if policy(NameCardWhiteTitle).index? %>
        <%= nav_item controller: 'person/name_card_white_titles', html_options: {class: "nav-item"} do %>
          <%= link_to person_name_card_white_titles_path, class: "nav-link" do %>
            <i class="nav-icon fas fa-user-alt"></i>
            <%= t("layouts.sidebar.person.name_card_white_title") %>
          <% end %>
        <% end %>
      <% end %>
      <% if policy(NameCardBlackTitle).index? %>
        <%= nav_item controller: 'person/name_card_black_titles', html_options: {class: "nav-item"} do %>
          <%= link_to person_name_card_black_titles_path, class: "nav-link" do %>
            <i class="nav-icon fas fa-user-alt"></i>
            <%= t("layouts.sidebar.person.name_card_black_title") %>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </nav>
  <button class="sidebar-minimizer" type="button"></button>
</div>
