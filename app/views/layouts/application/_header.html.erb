<header class="app-header navbar">
  <% if has_sidebar? %>
    <button class="navbar-toggler sidebar-toggler d-lg-none" type="button" data-toggle="sidebar-show">
      <span class="navbar-toggler-icon"></span>
    </button>
  <% end %>
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_pack_tag "tianhua_logo.png" -%>
  <% end %>
  <ul class="nav navbar-nav ml-auto">
    <% if current_user.present? %>
      <li class="nav-item dropdown">
        <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
          <%= current_user.chinese_name %>
          <i class="fas fa-caret-down"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-right">
          <% if current_user.admin? %>
            <%= link_to t("layouts.header.account_menu.admin"), admin_root_path, class: "dropdown-item" %>
          <% end %>
          <%= link_to t("layouts.header.account_menu.profile"), account_profile_path, class: "dropdown-item" %>
          <%= link_to t("layouts.header.account_menu.sign_out"), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    <% else %>
      <%= link_to '登入', new_user_session_path, class: 'btn btn-sm btn-outline-secondary' %>
    <% end %>
  </ul>
  <% if has_aside? %>
    <button class="navbar-toggler aside-menu-toggler d-md-down-none" type="button" data-toggle="aside-menu-lg-show">
      <span class="aside-style-toggler-icon"></span>
    </button>
    <button class="navbar-toggler aside-menu-toggler d-lg-none" type="button" data-toggle="aside-menu-show" id="aside-menu-toggler">
      <span class="aside-style-toggler-icon"></span>
    </button>
  <% end %>
</header>
