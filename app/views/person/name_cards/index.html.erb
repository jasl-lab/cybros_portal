<%- content_for :action_bar do %>
  <ol>
    <li class="action_bar-item">
      <%= link_to t(".actions.new"), new_person_name_card_path, class: "btn text-primary" %>
    </li>
    <% if policy(NameCardApply).report? %>
      <li class="action_bar-item">
        <%= link_to t(".actions.only_see_approved"), person_name_cards_path(only_see_approved: true), class: "btn text-primary" %>
      </li>
      <li class="action_bar-item">
        <%= link_to t(".actions.report"), report_person_name_cards_path(format: :csv), class: "btn text-primary" %>
      </li>
    <% end %>
  </ol>

<% end %>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <h3 class="page-title">
      <%= t(".title") %>
    </h3>
    <div class="row">
      <div class="col-lg-12" data-controller="name-cards-lists"
        data-name-cards-lists-page-length-value="<%= my_per_page -%>">
        <table id="name-cards-lists-datatable"
          class="table table-hover table-bordered table-responsive"
          data-source="<%= person_name_cards_path(only_see_approved: @only_see_approved,format: :json) %>">
          <thead>
            <tr>
              <th><%= t(".table.name") -%></th>
              <th><%= t(".table.english_name") -%></th>
              <th><%= t(".table.email") -%></th>
              <th><%= t(".table.task_id") -%></th>
              <th><%= t(".table.department_name") -%></th>
              <th><%= t(".table.en_department_name") -%></th>
              <th><%= t(".table.title") -%></th>
              <th><%= t(".table.en_title") -%></th>
              <th><%= t(".table.mobile") -%></th>
              <th><%= t(".table.phone_ext") -%></th>
              <th><%= t(".table.fax_no") -%></th>
              <th><%= t(".table.print_out_box_number") -%></th>
              <th><%= t(".table.status") -%></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div id="upload-person-name-cards-modal" class="modal" tabindex="-1" role="dialog"></div>
<div id="show-task-detail-in-person-name-cards-modal" class="modal" tabindex="-1" role="dialog"></div>

