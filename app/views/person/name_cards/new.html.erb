<div class="row">
<div class="col-md-12">
<div class="card">
<div class="card-header">
  <strong><%= t('.form_header') %></strong>
</div>
<%= form_with model: @name_card_apply, url: person_name_cards_path, class: 'form-horizontal', local: true do |f| %>
<div class="card-body">
  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-name"><%= t('.name') %></label>
        <div class="col-md-9">
          <input class="form-control" id="text-input-name" type="text" name="name_card_apply[name]" disabled value="<%= current_user.chinese_name -%>">
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-company-name"><%= t('.company_name') %></label>
        <div class="col-md-9">
          <%= f.select :company_name, current_user.departments.collect { |d| [d.company_name] }, {}, id: 'text-input-company-name', class: 'form-control' %>
          <%= f.error_message :company_name, tag: :span, class: "help-block" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-department-name"><%= t('.department_name') %></label>
        <div class="col-md-9">
          <%= f.select :department_name, current_user.departments.collect { |d| [d.name] }, {}, id: 'text-input-department-name', class: 'form-control' %>
          <span class="help-block"><%= t('.department_fill_hint') %></span>
          <%= f.error_message :department_name, tag: :span, class: "help-block" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-title"><%= t('.title') %></label>
        <div class="col-md-9">
          <%= f.text_field :title, class: 'form-control', id: 'text-input-title' %>
          <span class="help-block"><%= @name_card_title_fill_hint %></span>
          <%= f.error_message :title, tag: :span, class: "help-block" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-english-name"><%= t('.english_name') %></label>
        <div class="col-md-9">
          <%= f.text_field :english_name, class: 'form-control', id: 'text-input-english-name' %>
          <%= f.error_message :english_name, tag: :span, class: "help-block" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-en-company-name"><%= t('.en_company_name') %></label>
        <div class="col-md-9">
          <%= f.text_field :en_company_name, class: 'form-control', id: 'text-input-en-company-name' %>
          <%= f.error_message :en_company_name, tag: :span, class: "help-block" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-en-department-name"><%= t('.en_department_name') %></label>
        <div class="col-md-9">
          <%= f.text_field :en_department_name, class: 'form-control', id: 'text-input-en-department-name' %>
          <span class="help-block"><%= t('.en_department_fill_hint') %></span>
          <%= f.error_message :en_department_name, tag: :span, class: "help-block" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-en-title"><%= t('.en_title') %></label>
        <div class="col-md-9">
          <%= f.text_field :en_title, class: 'form-control', id: 'text-input-en-title' %>
          <%= f.error_message :en_title, tag: :span, class: "help-block" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-mobile"><%= t('.mobile') %></label>
        <div class="col-md-9">
          <%= f.text_field :mobile, class: 'form-control', id: 'text-input-mobile' %>
          <%= f.error_message :mobile, tag: :span, class: "help-block" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-phone_ext"><%= t('.phone_ext') %></label>
        <div class="col-md-9">
          <%= f.text_field :phone_ext, class: 'form-control', id: 'text-input-phone_ext' %>
          <%= f.error_message :phone_ext, tag: :span, class: "help-block" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-fax_no"><%= t('.fax_no') %></label>
        <div class="col-md-9">
          <%= f.text_field :fax_no, class: 'form-control', id: 'text-input-fax_no' %>
          <%= f.error_message :fax_no, tag: :span, class: "help-block" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-email"><%= t('.email') %></label>
        <div class="col-md-9">
          <input class="form-control" id="text-input-email" type="text" name="name_card_apply[email]" disabled value="<%= current_user.email -%>">
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input-print_out_box_number"><%= t('.print_out_box_number') %></label>
        <div class="col-md-9">
          <%= f.text_field :print_out_box_number, class: 'form-control', id: 'text-input-print_out_box_number' %>
          <span class="help-block"><%= t('.print_out_box_number_fill_hint') %></span>
          <%= f.error_message :print_out_box_number, tag: :span, class: "help-block" %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="card-footer">
  <%= f.submit 'Submit', class: 'btn btn-sm btn-primary' %>
</div>
<% end %>
</div>
</div>
</div>
