<%= form_with(model: knowledge,
  url: knowledge.new_record? ? company_knowledge_maintains_path : company_knowledge_maintain_path(knowledge), local: true, class: 'form-horizontal') do |f| %>
<div class="card-body">
  <%= f.hidden_field :q_user_id %>
  <div class="form-group row">
    <label class="col-md-3 col-form-label"><%= f.label :category_1 -%></label>
    <div class="col-md-9">
      <%= f.text_field :category_1, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-md-3 col-form-label"><%= f.label :category_2 -%></label>
    <div class="col-md-9">
      <%= f.text_field :category_2, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-md-3 col-form-label"><%= f.label :category_3 -%></label>
    <div class="col-md-9">
      <%= f.text_field :category_3, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3"></div>
    <div class="col-md-9">
      <div class="form-check">
        <%= f.check_box :shanghai_only, class: 'form-check-input' %>
        <%= f.label t('company.knowledge_maintains.index.table.shanghai_only'), class: 'form-check-label' -%>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-md-3 col-form-label"><%= f.label :question -%></label>
    <div class="col-md-9">
      <%= f.text_field :question, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-md-3 col-form-label"><%= f.label :answer -%></label>
    <div class="col-md-9">
      <%= f.rich_text_area :answer, class: 'form-control' %>
    </div>
  </div>
</div>
<div class="card-footer">
  <button class="btn btn-sm btn-primary" type="submit">
  <i class="fa fa-dot-circle-o"></i> Submit</button>
</div>
<% end %>
