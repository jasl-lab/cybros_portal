<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="container">
      <ol>
        <% @knowledges.each do |knowledge| -%>
          <div>
            <h5 class="page-title mt-4">
              <li>
                <%= knowledge.question -%>
                <span class="badge badge-info float-right"><%= knowledge.category_1 -%></span>
                <span class="badge badge-secondary float-right mr-2"><%= knowledge.category_2 -%></span>
                <span class="badge badge-success float-right mr-2"><%= knowledge.category_3 -%></span>
              </li>
            </h5>
            <div class="mx-3"><%= knowledge.answer %></div>
          </div>
        <% end %>
      </ol>
    </div>
  </div>
</div>
