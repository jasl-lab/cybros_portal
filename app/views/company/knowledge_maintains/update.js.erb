<% if @save_success %>
  $("#knowledge-edit-modal").modal('hide');
  $("#toast-message").html('<%= j t(".success") -%>');
  $("#knowledge-row-<%= @knowledge.id -%>").html('<%= j render partial: "knowledge_row", locals: { knowledge: @knowledge } -%>');
  $("#knowledge-list-row-<%= @knowledge.id -%>").html('<%= j render partial: "list_row", locals: { knowledge: @knowledge }-%>');
<% else %>
  $("#toast-message").html('<%= j @knowledge.errors.full_messages.join(';') -%>');
<% end %>
setTimeout( function(){
  $('.toast').toast({delay: 3000});
  $('.toast').toast('show');
}, 200);
