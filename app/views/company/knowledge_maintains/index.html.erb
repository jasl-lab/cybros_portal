<%- content_for :action_bar do %>
  <ol>
    <li class="action_bar-item">
      <%= link_to t('.actions.new'), new_company_knowledge_maintain_path, class: 'btn text-primary' %>
    </li>
  </ol>
<% end %>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="container">
      <h3 class="page-title">
        <%= t(".title") %>
      </h3>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= t('.table.category_1') -%></th>
              <th><%= t('.table.category_2') -%></th>
              <th><%= t('.table.category_3') -%></th>
              <th><%= t('.table.question') -%></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @knowledges.each do |knowledge| %>
              <tr>
                <td><%= knowledge.category_1 %></td>
                <td><%= knowledge.category_2 %></td>
                <td><%= knowledge.category_3 %></td>
                <td><%= knowledge.question %></td>
                <td>
                  <%= link_to edit_company_knowledge_maintain_path(knowledge) do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                  <%= link_to company_knowledge_maintain_path(knowledge), method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%= paginate @knowledges %>

    </div>
  </div>
</div>
