<div class="row justify-content-center">
  <div class="col-lg-12">
    <h3 class="page-title">
      <%= t(".title") %>
    </h3>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t('.table.receive_id') -%></th>
            <th><%= t('.table.user_name') -%></th>
            <th><%= t('.table.user_mobile') -%></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @sms_phone_mappings.each do |s| %>
            <tr>
              <td><%= s.receive_id -%></td>
              <td><%= s.user&.chinese_name -%></td>
              <td><%= s.user_mobile -%></td>
              <td>
                <%= link_to edit_company_sms_phone_configuration_path(id: s.id), remote: true do %>
                  <i class="fa fa-edit"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div id="sms-phone-mapping-modal" class="modal" tabindex="-1" role="dialog"></div>
