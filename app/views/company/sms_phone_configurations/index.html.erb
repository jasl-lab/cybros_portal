<%- content_for :action_bar do %>
  <ol>
    <li class="action_bar-item">
      <%= link_to t('.new'), new_company_sms_phone_configuration_path %>
    </li>
  </ol>
<% end %>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <h3 class="page-title">
      <%= t(".title") %>
    </h3>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t('.table.phone_registrant') -%></th>
            <th><%= t('.table.receive_id') -%></th>
            <th><%= t('.table.user_name') -%></th>
            <th><%= t('.table.user_mobile') -%></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @sms_phone_mappings.each do |s| %>
            <tr id="sms-phone-mapping-row-<%= s.id -%>">
              <%= render partial: "sms_phone_mapping_row", locals: { s: s } %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div id="sms-phone-mapping-modal" class="modal" tabindex="-1" role="dialog"></div>
