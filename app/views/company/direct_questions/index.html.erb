<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="container">
      <h3 class="page-title">
        <%= t(".title") %>
      </h3>
      <%= form_for @direct_question, html: { class: 'form-inline' } do |f| %>
        <div class="form-group mb-2">
          <label for="new-question-text"><%= t(".table.question") %>：</label>
          <%= f.text_field :question, class: 'form-control', id: 'new-question-text' %>
        </div>
        <div class="form-group mx-sm-3 mb-2">
          <label for="new-real-question-text"><%= t(".real_question") %>：</label>
          <%= f.text_field :real_question, class: 'form-control', id: 'new-real-question-text' %>
          <%= f.error_message :real_question, tag: :span, class: "help-block error-message" %>
        </div>
        <%= f.submit t(".create_button"), class: 'btn btn-primary mb-2' %>
      <% end %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= t('.table.question') -%></th>
              <th><%= t('.table.real_questions') -%></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @direct_questions.each do |direct_question| %>
              <tr>
                <td><%= direct_question.question -%></td>
                <td><%= direct_question.knowledges.pluck(:question).join("<br>").html_safe -%></td>
                <td>
                  <%= link_to company_direct_question_path(direct_question), method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
