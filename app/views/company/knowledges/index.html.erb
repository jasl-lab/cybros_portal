<div class="row justify-content-center">
  <div class="col-lg-12">
    <h3 class="page-title">
      <%= t(".title") %>
    </h3>
    <%= form_tag company_home_knowledges_path, method: :get, class: 'form-inline' do -%>
      <div class="form-group">
        <label class="mr-1" for="select-category-1"><%= t(".category_1") -%>：</label>
        <%= select_tag 'category_1', options_for_select(@category_1_list, params[:category_1]), include_blank: true, class: 'form-control', id: 'select-category-1' %>
      </div>
      <div class="form-group">
        <label class="mr-1" for="text-knowledge-question"><%= t(".question") -%>：</label>
        <%= text_field_tag 'question', params[:question], class: 'form-control', id: 'text-knowledge-question' %>
      </div>
      <div><%= submit_tag t(".search"), class: 'btn btn-primary' %></div>
    <% end -%>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t('.question') -%></th>
          </tr>
        </thead>

        <tbody>
          <% @knowledges.each do |knowledge| %>
            <tr>
              <td><%= link_to knowledge.question, company_home_knowledge_path(knowledge) -%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= paginate @knowledges %>
  </div>
</div>
