<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="container">
      <h3 class="page-title">
        <%= t(".title") %>
        <%= link_to t('.generate'), generate_admin_roles_path, remote: true, method: :post, class: 'btn btn-secondary float-right' -%>
      </h3>
      <div class="table-responsive mt-3">
        <table class="table table-striped">
          <thead>
          <tr>
            <th><%= t(".table.id") %></th>
            <th><%= t(".table.role_name") %></th>
            <th><%= t(".table.hr_group_rt_reader") %></th>
            <th><%= t(".table.hr_subsidiary_rt_reader") %></th>
            <th><%= t(".table.hr_report_writer") %></th>
            <th><%= t(".table.hr_group_reader") %></th>
            <th><%= t(".table.hr_subsidiary_reader") %></th>
          </tr>
          </thead>
          <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.id %></td>
              <td><%= link_to role.role_name, admin_role_path(id: role.id) %></td>
              <td><%= role.hr_group_rt_reader %></td>
              <td><%= role.hr_subsidiary_rt_reader %></td>
              <td><%= role.hr_report_writer %></td>
              <td><%= role.hr_group_reader %></td>
              <td><%= role.hr_subsidiary_reader %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
