<div class="row">
  <div class="col-lg-12">
    <h3 class="page-title">
      <%= t(".title") %>
    </h3>
    <div class="row">
      <div class="col-lg-12">
        <%= form_tag cost_split_cost_allocation_summary_path, method: :get, class: 'form-inline' do -%>
          <div class="form-group mr-3">
            <label class="mr-1"><%= t(".month_name") -%>ï¼š</label>
            <%= select_tag 'month_name', options_for_select(@all_month_names, @month_name), class: 'form-control' %>
          </div>
          <div>
            <%= submit_tag t(".confirm"), class: 'btn btn-primary' %>
          </div>
        <% end -%>
      </div>
      <div class="col-12">
        <table class="table table-bordered table-responsive">
          <thead>
            <tr>
              <th><%= t(".table.abstract") -%></th>
              <th><%= t(".table.sum") -%></th>
              <% @ordered_companies.keys.each do |org_shortname| -%>
                <th><%= org_shortname -%></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @ordered_depts.keys.each_with_index do |dept_name, index| %>
              <tr>
                <td><%= index + 1 -%></td>
                <td><%= dept_name -%></td>
                <% @ordered_companies.keys.each do |org_shortname| -%>
                  <td>

                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
