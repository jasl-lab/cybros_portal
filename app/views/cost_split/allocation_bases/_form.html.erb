<%= form_with model: cost_split_allocation_base, url: cost_split_allocation_bases_path do |f| %>
  <%= f.hidden_field :base_name %>
  <%= f.hidden_field :company_code %>
  <div class="form-group">
    <label for="cost-split-allocation-base-head_count"><%= t('.head_count') %></label>
    <%= f.text_field :head_count, class: 'form-control', id: 'cost-split-allocation-base-head_count' %>
  </div>

  <%= f.submit (cost_split_allocation_base.persisted? ? t("shared.form.submit.update") : t("shared.form.submit.create")), class: "btn btn-block btn-primary" %>
<% end %>
