<div class="row justify-content-center">
  <div class="col-lg-12">
    <h3 class="page-title">
      <%= t(".title") %>
    </h3>

    <%= form_tag cost_split_set_baseline_job_types_path, method: :get, class: 'form-inline' do -%>
      <div class="form-group">
        <label class="mr-1"><%= t(".month_name") -%>ï¼š</label>
        <%= select_tag 'month_name', options_for_select(@all_month_names, @month_name), class: 'form-control' %>
      </div>
    <% end -%>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th><%= t(".table.org_code") %></th>
          <th><%= t(".table.chinese_name") %></th>
          <th><%= t(".table.email") %></th>
          <th><%= t(".table.last_report_date") %></th>
        </tr>
        </thead>
        <tbody>
          <% @manual_cw_access_codes.each do |ac| %>
            <% email = ac.user.email -%>
            <% th_cwtb_day = @th_cwtb_days.find { |d| d.fillmancode == email } %>
            <tr>
              <td><%= ac.org_code %></td>
              <td><%= ac.user.chinese_name %></td>
              <td><%= email %></td>
              <td><%= th_cwtb_day&.reportdate %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
