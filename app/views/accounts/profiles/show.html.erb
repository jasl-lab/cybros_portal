<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="container">
      <%= form_with(model: @user, url: account_profile_path, html: { method: :put }) do |f| %>
      <div class="row">
        <div class="col-md-4">
          <h5>
            <%= t(".section.open_in_new_tab.title") %>
          </h5>
          <p class="text-muted">
            <%= t(".section.open_in_new_tab.description") %>
          </p>
        </div>
        <div class="col-md-8">
          <div class="form-group">
            <div class="form-check form-check-inline">
              <label class="switch switch-pill switch-primary">
                <%= f.check_box :open_in_new_tab, class: "switch-input" %>
                <span class="switch-slider"></span>
              </label>
              <label class="form-check-label ml-3 mb-2"><%= t('.open_in_new_tab') -%></label>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <h5>
            <%= t(".section.per_page.title") %>
          </h5>
          <p class="text-muted">
            <%= t(".section.per_page.description") %>
          </p>
        </div>
        <div class="col-md-8">
            <div class="form-group text-left">
              <%= f.label :per_page %>
              <%= f.select :per_page, [ 12, 25, 50, 75, 100 ], { include_blank: false }, class: 'form-control-plaintext form-control' %>
            </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 offset-md-4">
            <%= f.submit t(".submit"), class: "btn btn-block btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
